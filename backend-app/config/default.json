{
  "port": "env(PORT)",
  "settings": {
    "loggerFormat": "tiny",
    "session": {
      "store": "@foal/typeorm"
    },
    "jwt": {
      "secret": "env(JWT_SECRET)",
      "secretEncoding": "base64"
    },
    "csrf": {
      "enabled": true
    },
    "disk": {
      "driver": "local",
      "local": {
        "directory": "assets"
      }
    }
  },
  "database": {
    "type": "mysql",
    "host": "env(DB_HOST)",
    "port": "env(DB_PORT)",
    "username": "env(DB_USERNAME)",
    "password": "env(DB_PASSWORD)",
    "database": "env(DB_NAME)",
    "entities": ["src/app/entity/*.ts"]
  }
}
